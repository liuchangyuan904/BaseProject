<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/userIdTextView"
            android:text="ID:111欢迎你"
            android:textColor="@color/day_text_color"
            android:textSize="16sp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/searchTextView"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/find_pwd_bg"
            android:layout_width="wrap_content"
            android:text="搜索"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    
    <RelativeLayout
        android:padding="20dp"
        android:layout_margin="30dp"
        android:background="@drawable/red_board_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/currentCityTextView"
            android:layout_width="wrap_content"
            android:text="当前城市："
            android:textColor="@color/day_text_color"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/currentCityTextView"
            android:id="@+id/weatherTextView"
            android:layout_width="wrap_content"
            android:text="实时天气：晴"
            android:paddingTop="10dp"
            android:textColor="@color/day_text_color"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/weatherDetailTextView"
            android:layout_below="@+id/weatherTextView"
            android:layout_width="wrap_content"
            android:text="温度、湿度、PM2.5"
            android:textColor="@color/day_text_color"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/goToDetailTextView"
            android:layout_below="@+id/weatherDetailTextView"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/find_pwd_bg"
            android:layout_width="wrap_content"
            android:text="详情"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@color/find_pwd_bg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="城市"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="天气"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="温度"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"></ListView>
</LinearLayout>