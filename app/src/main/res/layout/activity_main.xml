<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/mainImg"
            android:layout_width="match_parent"
            android:src="@mipmap/main_bg"
            android:scaleType="fitXY"
            android:layout_height="300dp" />
        <Button
            android:id="@+id/rememberWordBtn"
            android:layout_below="@+id/mainImg"
            android:background="@drawable/grey_btn_bg"
            android:layout_width="match_parent"
            android:text="开始背单词"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/reviewWordBtn"
            android:layout_below="@+id/rememberWordBtn"
            android:background="@drawable/grey_btn_bg"
            android:layout_width="match_parent"
            android:text="复习单词"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/settingsLayout"
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#718B66"
            android:layout_width="match_parent"
            android:id="@+id/userLayout"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/userIdTextView"
                android:textSize="18sp"
                android:text="11@126.com"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/logoutTextView"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_margin="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:background="@drawable/grey_btn_bg"
                android:layout_width="wrap_content"
                android:text="退出"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/userLayout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/shengciTextView"
                android:layout_width="match_parent"
                android:text="生词本"
                android:padding="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/studyRemindTextView"
                android:layout_width="match_parent"
                android:text="学习提醒"
                android:padding="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/studyPlanTextView"
                android:layout_width="match_parent"
                android:text="学习计划"
                android:padding="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/dancibenTextView"
                android:layout_width="match_parent"
                android:text="单词本"
                android:padding="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/myDataTextView"
                android:layout_width="match_parent"
                android:text="我的数据"
                android:padding="20dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/homeLayout"
            android:background="@drawable/grey_btn_bg"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitCenter"
                android:layout_width="20dp"
                android:src="@mipmap/a_icon_home"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="主菜单"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/settingLayout"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/grey_btn_bg"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitCenter"
                android:layout_width="20dp"
                android:src="@mipmap/ico_setting"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="用户设置"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>