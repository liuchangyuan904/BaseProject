<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectCityActivity">

    <com.common.project.CommonHead
        android:id="@+id/act_phone_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/day_page_bg"
        android:gravity="center"
        android:paddingTop="5dp"
        app:leftImg="@mipmap/icon_backarrow"
        app:mid_txt="详情"
        app:mid_txt_color="@color/main_color"
        app:show_left="true"></com.common.project.CommonHead>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/provinceListView"
            android:scrollbars="none"
            android:layout_width="120dp"
            android:layout_height="match_parent"></ListView>
        <View
            android:layout_width="1dp"
            android:background="@color/grey"
            android:layout_height="match_parent"/>
        <ListView
            android:id="@+id/cityListView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>